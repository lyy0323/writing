                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>

<script>
(function() {
    // 唱针落下音效（Web Audio API 合成）
    var recAudioCtx = null;

    function getRecAudioCtx() {
        if (!recAudioCtx) {
            recAudioCtx = new (window.AudioContext || window.webkitAudioContext)();
        }
        return recAudioCtx;
    }

    function playNeedleSound() {
        var ctx = getRecAudioCtx();
        if (ctx.state === 'suspended') {
            ctx.resume();
        }
        var now = ctx.currentTime;

        // 短促爆裂声
        var bufferSize = ctx.sampleRate * 0.1;
        var buffer = ctx.createBuffer(1, bufferSize, ctx.sampleRate);
        var data = buffer.getChannelData(0);
        for (var i = 0; i < bufferSize; i++) {
            data[i] = (Math.random() * 2 - 1) * 0.5;
        }
        var noise = ctx.createBufferSource();
        noise.buffer = buffer;
        var noiseGain = ctx.createGain();
        noiseGain.gain.setValueAtTime(0.8, now);
        noiseGain.gain.exponentialRampToValueAtTime(0.01, now + 0.1);
        noise.connect(noiseGain);
        noiseGain.connect(ctx.destination);
        noise.start(now);

        // 低频底噪
        var lfo = ctx.createOscillator();
        lfo.type = 'triangle';
        lfo.frequency.value = 50;
        var lfoGain = ctx.createGain();
        lfoGain.gain.setValueAtTime(0.05, now);
        lfoGain.gain.linearRampToValueAtTime(0, now + 0.5);
        lfo.connect(lfoGain).connect(ctx.destination);
        lfo.start(now);
        lfo.stop(now + 0.5);
    }

    function clickRecord(item) {
        var url = item.getAttribute('data-url');
        playNeedleSound();
        setTimeout(function() {
            if (url) {
                window.location.href = url;
            }
        }, 600);
    }

    // 事件委托
    var containers = document.querySelectorAll('.record-container');
    for (var i = 0; i < containers.length; i++) {
        containers[i].addEventListener('click', function(e) {
            var item = e.target.closest('.rec-item');
            if (item) {
                clickRecord(item);
            }
        });
    }
})();
</script>
