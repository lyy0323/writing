                {% if item.cover %}<span class="rec-cd-hinge rec-cd-hinge-l"></span><span class="rec-cd-hinge rec-cd-hinge-r"></span><span class="rec-cd-clasp"></span>{% endif %}
                <div class="rec-sleeve-text">
                    <span class="rec-title">{{ item.label }}</span>
