<div class="coconut-container">
    <div class="coco-grid">
        {% if include.component.ref %}
            {% assign coco_items = site.data.indexes[include.component.ref].items %}
        {% else %}
            {% assign coco_items = include.component.items %}
        {% endif %}
        {% for item in coco_items %}
        <div class="coco-item" data-url="{{ item.url | prepend: site.baseurl }}">
            <div class="coco-emoji">ğŸ¥¥</div>
            <div class="coco-tag">{{ item.label }}</div>
        </div>
        {% endfor %}
    </div>
</div>

<script>
(function() {
    var baseUrl = '{{ site.baseurl }}';

    // é¢„åŠ è½½éŸ³æ•ˆ
    var hoverSound = new Audio(baseUrl + '/assets/static/music/wood_click.ogg');
    var clickSound = new Audio(baseUrl + '/assets/static/music/open_bottle.mp3');
    hoverSound.preload = 'auto';
    clickSound.preload = 'auto';

    function playSound(audio) {
        // æ¯æ¬¡ä»å¤´æ’­æ”¾ï¼Œæ”¯æŒå¿«é€Ÿé‡å¤è§¦å‘
        audio.currentTime = 0;
        audio.play().catch(function() {});
    }

    function knockCoconut(item) {
        var url = item.getAttribute('data-url');
        var emojiDiv = item.querySelector('.coco-emoji');

        // æ’­æ”¾å¼€ç“¶éŸ³æ•ˆ
        playSound(clickSound);

        // æ¤°å­å˜é¥®æ–™å½©è›‹
        var originalEmoji = emojiDiv.innerText;
        emojiDiv.innerText = 'ğŸ§‰';

        // åŠ¨ç”»ç»“æŸåè·³è½¬
        setTimeout(function() {
            emojiDiv.innerText = originalEmoji;
            if (url) {
                window.location.href = url;
            }
        }, 600);
    }

    // äº‹ä»¶å§”æ‰˜
    var containers = document.querySelectorAll('.coconut-container');
    for (var i = 0; i < containers.length; i++) {
        // hover éŸ³æ•ˆ
        containers[i].addEventListener('mouseenter', function(e) {
            var item = e.target.closest('.coco-item');
            if (item) {
                playSound(hoverSound);
            }
        }, true);

        // ç‚¹å‡»éŸ³æ•ˆ + è·³è½¬
        containers[i].addEventListener('click', function(e) {
            var item = e.target.closest('.coco-item');
            if (item) {
                knockCoconut(item);
            }
        });
    }
})();
</script>
